<GuiXml>
    <Controls>
	<TopLevelControl name="POC_Stats" hidden="true" layer="BACKGROUND" level="1" allowBringToTop="false"
			 mouseEnabled="true" movable="true" resizeHandleSize="8" tier="LOW">
	    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
	    <Dimensions x="1100" y="264" />
	    <OnMoveStart>POC.Stats:OnMove(false)</OnMoveStart>
	    <OnMoveStop>POC.Stats:OnMove(true)</OnMoveStop>
            <Controls>
                <Control name="$(parent)Movable" tier="PARENT" hidden="true">
                    <Anchor point="TOPLEFT"/>
-                   <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" offsetY=60/>
                    <Controls>
                        <Backdrop name="$(parent)Backdrop" edgeColor="000000" centerColor="FF0000" alpha="0.1" >
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Backdrop>
                        <Label name="$(parent)Label" inherits="POC_MoveActiveLabel" text="MOVE" tier="2">
                            <Anchor point="CENTER" />
                        </Label>
                    </Controls>
                </Control>
            </Controls>
	</TopLevelControl>
        <Control name="POC_Stat_Cell" virtual="true">
            <Dimensions x="550" y="30" />
            <Controls>
                <Label name="$(parent)Label" width="75" height="25" font="UltHeaderFont" inheritAlpha="true" color="FFFFFF" verticalAlignment="TEXT_ALIGN_TOP" horizontalAlignment="TEXT_ALIGN_LEFT" />
            </Controls>
        </Control>
    </Controls>
</GuiXml>
