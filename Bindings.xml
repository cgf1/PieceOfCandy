<Bindings>
    <Layer name="SI_KEYBINDINGS_CATEGORY_GENERAL">
	<Category name="Piece of Candy">
	    <Action name="POC_COUNTDOWN_KEY">
		<Down>
		    if POC.Me ~= nil and POC.Me.IsLeader then
			POC.Comm.Send(POC.COMM_TYPE_COUNTDOWN, 3)
		    end
		</Down>
	    </Action>
	    <Action name="POC_NEEDHELP_KEY">
		<Down>
                    POC.Comm.Send(POC.COMM_TYPE_NEEDHELP)
		</Down>
	    </Action>
	</Category>
    </Layer>
</Bindings>

