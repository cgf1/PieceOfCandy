<GuiXml>
  <Controls>
    <TopLevelControl name="POC_Countdown" hidden="true" layer="OVERLAY" level="1" allowBringToTop="false" mouseEnabled="true" movable="true" clampedToScreen="true">
        <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="0" />
        <Dimensions x="100" y="100" />
        <OnMoveStop>
            POC.Countdown.SavePos(self)
        </OnMoveStop>

      <Controls>
        <Label name="$(parent)Label" width="200" height="25" inheritAlpha="true"
            wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="">
            <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
